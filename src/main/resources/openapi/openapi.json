{
  "openapi": "3.0.1",
  "info": {
    "title": "UMC Server WorkBook API",
    "description": "UMC Server WorkBook API 명세서",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "/"
    }
  ],
  "security": [
    {
      "JWT TOKEN": []
    }
  ],
  "tags": [
    {
      "name": "사용자 인증",
      "description": "회원가입 및 로그인 관련 API"
    },
    {
      "name": "수업",
      "description": "수업 관련 API"
    }
  ],
  "paths": {
    "/studeal/negotiations": {
      "post": {
        "tags": [
          "negotiation-controller"
        ],
        "operationId": "createNegotiation",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/NegotiationResponseDTO"
                }
              }
            }
          }
        }
      }
    },
    "/studeal/lessons": {
      "post": {
        "tags": [
          "수업"
        ],
        "summary": "수업 개설 API",
        "description": "새로운 수업을 개설하는 API입니다. 강사와 학생 정보가 필요합니다.",
        "operationId": "createLesson",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "COMMON200": {
            "description": "OK, 성공",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/ApiResponseCreateResponse"
                }
              }
            }
          },
          "LESSON4001": {
            "description": "수업이 존재하지 않습니다.",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/ApiResponse"
                }
              }
            }
          },
          "LESSON4005": {
            "description": "유효한 수업 가격이 필요합니다.",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/ApiResponse"
                }
              }
            }
          },
          "STUDENT4001": {
            "description": "학생이 존재하지 않습니다.",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/ApiResponse"
                }
              }
            }
          },
          "LESSON4003": {
            "description": "강사 정보가 필요합니다.",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/ApiResponse"
                }
              }
            }
          },
          "LESSON4004": {
            "description": "최소 한 명 이상의 학생이 필요합니다.",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/ApiResponse"
                }
              }
            }
          },
          "LESSON4002": {
            "description": "수업 제목은 필수입니다.",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/ApiResponse"
                }
              }
            }
          },
          "TEACHER4001": {
            "description": "강사가 존재하지 않습니다.",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/ApiResponse"
                }
              }
            }
          }
        }
      }
    },
    "/studeal/auth/signup": {
      "post": {
        "tags": [
          "사용자 인증"
        ],
        "summary": "회원가입 API",
        "description": "사용자 회원가입을 처리하는 API입니다. 학생/강사 역할에 따라 처리됩니다.",
        "operationId": "signupUser",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SignupRequest"
              }
            }
          },
          "required": true
        },
        "responses": {
          "COMMON200": {
            "description": "OK, 성공",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/ApiResponseUserResponseDTO"
                }
              }
            }
          },
          "USER4002": {
            "description": "이미 등록된 이메일입니다.",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/ApiResponse"
                }
              }
            }
          },
          "USER4003": {
            "description": "유효하지 않은 사용자 역할입니다.",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/ApiResponse"
                }
              }
            }
          },
          "USER4004": {
            "description": "유효하지 않은 비밀번호 형식입니다.",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/ApiResponse"
                }
              }
            }
          },
          "USER4005": {
            "description": "이름은 필수입니다.",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/ApiResponse"
                }
              }
            }
          },
          "USER4006": {
            "description": "유효한 이메일 형식이 아닙니다.",
            "content": {
              "*/*": {
                "schema": {
                  "$ref": "#/components/schemas/ApiResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CreateRequest": {
        "required": [
          "proposedPrice",
          "studentId",
          "teacherId"
        ],
        "type": "object",
        "properties": {
          "studentId": {
            "type": "integer",
            "format": "int64"
          },
          "teacherId": {
            "type": "integer",
            "format": "int64"
          },
          "proposedPrice": {
            "type": "integer",
            "format": "int64"
          },
          "message": {
            "type": "string"
          }
        }
      },
      "NegotiationResponseDTO": {
        "type": "object",
        "properties": {
          "negotiationId": {
            "type": "integer",
            "format": "int64"
          },
          "studentId": {
            "type": "integer",
            "format": "int64"
          },
          "teacherId": {
            "type": "integer",
            "format": "int64"
          },
          "proposedPrice": {
            "type": "integer",
            "format": "int64"
          },
          "status": {
            "type": "string",
            "enum": [
              "PENDING",
              "ACCEPTED",
              "REJECTED"
            ]
          }
        }
      },
      "ApiResponse": {
        "type": "object",
        "properties": {
          "isSuccess": {
            "type": "boolean"
          },
          "code": {
            "type": "string"
          },
          "message": {
            "type": "string"
          },
          "result": {
            "type": "object"
          }
        }
      },
      "ApiResponseCreateResponse": {
        "type": "object",
        "properties": {
          "isSuccess": {
            "type": "boolean"
          },
          "code": {
            "type": "string"
          },
          "message": {
            "type": "string"
          },
          "result": {
            "$ref": "#/components/schemas/CreateResponse"
          }
        }
      },
      "CreateResponse": {
        "type": "object",
        "properties": {
          "lessonId": {
            "type": "integer",
            "format": "int64"
          },
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "price": {
            "type": "integer",
            "format": "int64"
          }
        }
      },
      "SignupRequest": {
        "required": [
          "email",
          "name",
          "password",
          "role"
        ],
        "type": "object",
        "properties": {
          "name": {
            "maxLength": 50,
            "minLength": 0,
            "type": "string"
          },
          "email": {
            "maxLength": 100,
            "minLength": 0,
            "type": "string"
          },
          "password": {
            "maxLength": 255,
            "minLength": 0,
            "type": "string"
          },
          "role": {
            "type": "string",
            "enum": [
              "STUDENT",
              "TEACHER"
            ]
          },
          "bio": {
            "maxLength": 1000,
            "minLength": 0,
            "type": "string"
          },
          "major": {
            "type": "string",
            "enum": [
              "MATH",
              "SCIENCE",
              "ENGLISH",
              "KOREAN",
              "HISTORY",
              "CODING"
            ]
          }
        }
      },
      "ApiResponseUserResponseDTO": {
        "type": "object",
        "properties": {
          "isSuccess": {
            "type": "boolean"
          },
          "code": {
            "type": "string"
          },
          "message": {
            "type": "string"
          },
          "result": {
            "$ref": "#/components/schemas/UserResponseDTO"
          }
        }
      },
      "UserResponseDTO": {
        "type": "object",
        "properties": {
          "userId": {
            "type": "integer",
            "format": "int64"
          },
          "name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "role": {
            "type": "string",
            "enum": [
              "STUDENT",
              "TEACHER"
            ]
          },
          "bio": {
            "type": "string"
          },
          "major": {
            "type": "string",
            "enum": [
              "MATH",
              "SCIENCE",
              "ENGLISH",
              "KOREAN",
              "HISTORY",
              "CODING"
            ]
          }
        }
      }
    },
    "securitySchemes": {
      "JWT TOKEN": {
        "type": "http",
        "name": "JWT TOKEN",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}