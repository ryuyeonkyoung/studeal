              "MATH",
              "SCIENCE",
              "ENGLISH",
              "KOREAN",
              "HISTORY",
              "CODING"
            ]
          },
          "startPrice": {
            "type": "integer",
            "description": "시작 수업 가격",
            "format": "int64",
            "example": 50000
